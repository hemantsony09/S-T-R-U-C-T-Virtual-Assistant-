* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  /* border: solid black; */
  font-family: "Roboto Mono", monospace;
}

.main {
  min-height: 100vh;
  position: relative;
  width: 100%;
  background-image: url("giphy.gif");
  background-size: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main .image-container {
  padding: 10px;
}

.main .image-container .image {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.main .image-container .image img {
  width: 200px;
  border-radius: 100%;
  align-items: center;
}

.main .image-container h1 {
  color: #3b0000;
  text-align: center;
  margin-bottom: 10px;
  font-size: 40px;
}

.main .image-container p {
  color: #838383ac;
  font-size: 20px;
  text-align: center;
  margin-bottom: 40px;
}

.main .input {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 600px;
  height: 50px;
  border-radius: 20px;
  background: rgba(0, 0, 0, 0.734);
}

.main .input .talk {
  background: transparent;
  outline: none;
  border: none;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 15px;
  cursor: pointer;
}

.main .input .talk i {
  font-size: 20px;
  color: #ffffff;
}

.main .input .content {
  color: #efeced;
  font-size: 15px;
  margin-right: 20px;
}
